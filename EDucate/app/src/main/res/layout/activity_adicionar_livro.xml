<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdicionarLivro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="222dp"
            android:background="@drawable/custom_header_add_livros"
            android:orientation="vertical"
            android:id="@+id/rl_header"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_light"
                android:text="@string/adicionar_livro"
                android:textColor="#A3FFFFFF"
                android:textSize="40sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_circle_close_grey" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="43dp"
                android:onClick="fechar"
                android:src="@drawable/ic_close" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <View
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/custom_foreground_image_shape2" />

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="95dp"
                android:src="@drawable/ic_add_photo" />


            <View
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/custom_foreground_image_shape" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="180dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/custom_button_add_livro"
                android:fontFamily="@font/exo2_regular"
                android:padding="5dp"
                android:text="@string/btn_adicionar_img_livro"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="365dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nome_livro"
                android:fontFamily="@font/exo2_bold"
                android:textSize="18sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ex_nome_livro"
                android:fontFamily="@font/exo2_regular"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/autor_livro"
                        android:fontFamily="@font/exo2_bold"
                        android:textSize="18sp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ex_autor_livro"
                        android:fontFamily="@font/exo2_regular"
                        android:textSize="18sp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/genero_livro"
                        android:fontFamily="@font/exo2_bold"
                        android:textSize="18sp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ex_genero_livro"
                        android:textSize="18sp"
                        android:fontFamily="@font/exo2_regular"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/editora_livro"
                android:fontFamily="@font/exo2_bold"
                android:textSize="18sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ex_editora_livro"
                android:textSize="18sp"
                android:fontFamily="@font/exo2_regular"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_cadastrar_livro"
                android:background="@drawable/custom_button_cadastrar"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="55dp"
                android:onClick="fechar"
                android:drawableEnd="@drawable/ic_add_livro"
                android:paddingEnd="8dp"
                />






        </LinearLayout>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>