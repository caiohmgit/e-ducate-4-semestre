<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PerfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="222dp"
            android:background="@drawable/custom_header_add_livros"
            android:orientation="vertical"
            android:id="@+id/rl_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/exo2_light"
                android:text="@string/meu_perfil"
                android:textColor="#A3FFFFFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_fechar_perfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="335dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/botao_fechar"
                android:fontFamily="sans-serif"
                android:text="@string/botao_fechar"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagem_perfil"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="90dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/image_perfil" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/exo2_bold"
                android:letterSpacing="0.020"
                android:text="@string/nome_usuario"
                android:textColor="@color/laranja_padrao"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/nome_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/exo2_bold"
                android:textColor="@color/cinza_padrao"
                android:textSize="15.5sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/exo2_bold"
                android:letterSpacing="0.020"
                android:text="@string/email_perfil"
                android:textColor="@color/laranja_padrao"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/exo2_bold"
                android:textColor="@color/cinza_padrao"
                android:textSize="15.5sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/exo2_bold"
                android:letterSpacing="0.020"
                android:text="@string/telefone_perfil"
                android:textColor="@color/laranja_padrao"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/telefone_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/exo2_bold"
                android:textColor="@color/cinza_padrao"
                android:textSize="15.5sp" />


            <Button
                android:id="@+id/btn_editar_informacoes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/custom_orange_defaut_button"
                android:drawableEnd="@drawable/ic_edit"
                android:fontFamily="@font/exo2_bold"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:text="@string/btn_editar_perfil"
                android:textColor="@color/white" />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>