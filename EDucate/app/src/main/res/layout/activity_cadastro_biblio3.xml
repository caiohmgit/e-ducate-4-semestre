<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroBiblio3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="241dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/imgbiblio"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/headerCadastroBiblio"
                android:adjustViewBounds="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_insufilm_editar_biblio" />

            <TextView
                android:id="@+id/cadastrar_biblioteca"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:fontFamily="@font/exo2_medium"
                android:gravity="center"
                android:letterSpacing=".08"
                android:text="@string/cadastro_biblioteca"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/cinza_titulo"
                android:textSize="48sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terceiro_passo"
                android:textSize="27sp"
                android:textColor="@color/laranja_padrao"
                android:id="@+id/terceiro_passo"
                android:fontFamily="@font/exo2_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/palavras_chaves"
                android:textSize="18sp"
                android:textColor="@color/cinza_padrao"
                android:id="@+id/subtitulo_palavras_chaves"
                android:fontFamily="@font/exo2_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selecione_oito_palavras"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/laranja_padrao"
                android:id="@+id/selecione_oito_palavras"
                android:fontFamily="@font/exo2_bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/acesso_a_internet"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_acesso_internet"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:textColor="@color/white"
                    android:onClick="acessoInternet"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/espaçoes_de_estudo"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_espacos_estudo"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="espacoEstudo"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/livros_científicos"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_livros_cientificos"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="livrosCientificos"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/computadores_disponíveis"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_comput_disponiveis"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="computadoresDisponiveis"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/variedade_de_livros"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_variedade_livros"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="variedadeLivros"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/espaço_silencioso"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_espaco_silencioso"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="espacoSilencioso"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/espaço_de_trabalho"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_workspace"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="espacoTrabalho"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/eventos_culturais"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_eventos_culturais"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="eventosCulturais"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/aluguel_de_livros"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_aluguel_livros"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="aluguelLivros"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/espaço_ao_ar_livre"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_espaco_ar_livre"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="espacoArLivre"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/livros_infantís"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_livros_infantis"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="livrosInfantis"
                    />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="8sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/compra_de_livros"
                    android:textColor="@color/white"
                    android:fontFamily="@font/exo2_bold"
                    android:id="@+id/btn_compra_livros"
                    android:backgroundTint="@color/custom_button_palavras_chaves"
                    android:onClick="compraLivros"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="50dp"
            android:textSize="14sp"
            android:paddingEnd="8dp"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:text="@string/btn_proximo"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/exo2_bold"
            android:background="@drawable/custom_orange_defaut_button"
            android:drawableEnd="@drawable/ic_next"
            android:drawablePadding="12dp"
            android:onClick="irTelaCadastro4"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="10dp"
            android:text="@string/btn_voltar"
            android:fontFamily="@font/exo2_bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:onClick="fechar"

            />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>