<!--                android:textSize="19.5sp" />-->


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            >


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:paddingEnd="8dp"
                android:paddingVertical="10dp"
                android:paddingStart="30dp"
                android:text="@string/btn_informacoes_basicas"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/exo2_bold"
                android:background="@drawable/custom_orange_defaut_button"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="12dp"
                android:onClick="irTelaEditarInforBasicas"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:paddingEnd="8dp"
                android:paddingVertical="10dp"
                android:paddingStart="30dp"
                android:text="@string/btn_endereco"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/exo2_bold"
                android:background="@drawable/custom_orange_defaut_button"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="12dp"
                android:onClick="irTelaEditarEnderecoBiblio"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:paddingEnd="8dp"
                android:paddingVertical="10dp"
                android:paddingStart="30dp"
                android:text="@string/btn_palavras_chaves"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/exo2_bold"
                android:background="@drawable/custom_orange_defaut_button"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="12dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:paddingEnd="8dp"
                android:paddingVertical="10dp"
                android:paddingStart="30dp"
                android:text="@string/btn_visualizacao"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/exo2_bold"
                android:background="@drawable/custom_orange_defaut_button"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="12dp"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:paddingEnd="5dp"
                android:paddingVertical="10dp"
                android:paddingStart="30dp"
                android:text="@string/btn_voltar"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/exo2_bold"
                android:background="@drawable/custom_button_back"
                android:drawableEnd="@drawable/ic_return"
                android:drawablePadding="12dp"
                android:onClick="fechar"
                />




        </LinearLayout>



