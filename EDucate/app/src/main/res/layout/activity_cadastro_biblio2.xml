<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroBiblio2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/imgbiblio"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/headerCadastroBiblio"
                android:adjustViewBounds="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/custom_image_cadastro_biblio"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:paddingTop="60dp"
                android:textSize="48sp"
                android:text="@string/cadastro_biblioteca"
                android:textAllCaps="true"
                android:fontFamily="@font/exo2_medium"
                android:textColor="#CCEEEEEE"
                android:textAlignment="center"
                android:letterSpacing=".08"
                />






        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/segundo_passo"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/laranja_padrao"
            android:fontFamily="@font/exo2_bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endereco"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/cinza_padrao"
            android:fontFamily="@font/exo2_bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cep"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/cinza_padrao"
            android:fontFamily="@font/exo2_bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exemplo_cep"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/logradouro"
                    android:textColor="@color/cinza_padrao"
                    android:textSize="16sp"
                    android:fontFamily="@font/exo2_bold"
                    />

                <EditText
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/exemplo_logradouro"
                    android:layout_marginLeft="30dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/exo2_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/numero_biblioteca"
                    android:textColor="@color/cinza_padrao"
                    android:textSize="16sp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/exo2_bold"

                    />

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/exemplo_numero_biblioteca"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/exo2_medium"
                    />



            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/bairro"
                    android:textColor="@color/cinza_padrao"
                    android:textSize="16sp"
                    android:fontFamily="@font/exo2_bold"
                    />

                <EditText
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/exemplo_bairro"
                    android:textSize="16sp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/exo2_medium"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/cidade"
                    android:textColor="@color/cinza_padrao"
                    android:textSize="16sp"
                    android:fontFamily="@font/exo2_bold"
                    />

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/exemplo_cidade"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/exo2_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/estado_biblioteca"
                    android:textColor="@color/cinza_padrao"
                    android:textSize="16sp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/exo2_bold"

                    />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/exemplo_estado"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/exo2_medium"
                    />



            </LinearLayout>

        </LinearLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="35dp"
            android:textSize="14sp"
            android:paddingEnd="8dp"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:text="@string/btn_proximo"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/exo2_bold"
            android:background="@drawable/custom_orange_defaut_button"
            android:drawableEnd="@drawable/ic_next"
            android:drawablePadding="12dp"
            android:onClick="irTelaCadastro3"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="10dp"
            android:text="@string/btn_voltar"
            android:fontFamily="@font/exo2_bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:onClick="fechar"

            />

        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>