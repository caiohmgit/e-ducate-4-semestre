<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroBiblio1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/imgbiblio"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/headerCadastroBiblio"
                android:adjustViewBounds="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/custom_image_cadastro_biblio"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:fontFamily="@font/exo2_medium"
                android:letterSpacing=".08"
                android:paddingTop="60dp"
                android:text="@string/cadastro_biblioteca"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#CCEEEEEE"
                android:textSize="48sp" />






        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/primeiro_passo"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/laranja_padrao"
            android:fontFamily="@font/exo2_bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/informacoes_basicas"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/cinza_padrao"
            android:fontFamily="@font/exo2_bold"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_biblioteca"
            android:textSize="18sp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/tv_nome_biblio"
            android:textColor="@color/cinza_padrao"
            android:fontFamily="@font/exo2_bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exemplo_nome_biblio"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="16sp"
            android:id="@+id/et_nome_biblio"
            android:fontFamily="@font/exo2_medium"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/horario_funcionamento"
                    android:textColor="@color/cinza_padrao"
                    android:textSize="18sp"
                    android:fontFamily="@font/exo2_bold"
                    />

                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/exemplo_horario_func"
                    android:layout_marginLeft="30dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/exo2_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/possui_espaco_home"
                    android:textColor="@color/cinza_padrao"
                    android:textSize="17sp"
                    android:fontFamily="@font/exo2_bold"

                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:checked="false" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="90dp"
            android:textSize="14sp"
            android:paddingEnd="8dp"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:text="@string/btn_proximo"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/exo2_bold"
            android:background="@drawable/custom_orange_defaut_button"
            android:drawableEnd="@drawable/ic_next"
            android:drawablePadding="12dp"
            android:onClick="irTelaCadastro2"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>