<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvaliarBibliotecaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_biblioteca"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:scaleType="fitXY"
            android:src="@drawable/bibliotecasesc" />


        <Button
            android:id="@+id/btn_fechar_tela_biblioteca"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/botao_fechar"
            android:fontFamily="sans-serif"
            android:text="@string/botao_fechar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="510dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="210dp"
                android:background="@drawable/custom_avaliar_biblio_layout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/exo2_bold"
                    android:text="@string/avalie"
                    android:textAllCaps="false"
                    android:textColor="#F0CA04"
                    android:textSize="38sp" />

                <TextView
                    android:id="@+id/desc_biblioteca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/exo2_regular"
                    android:text="@string/descricao_tela_avaliacao_biblioteca"
                    android:textColor="#969595"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:background="#99C4C4C4" />


                <TextView
                    android:id="@+id/nome_biblioteca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/exo2_bold"
                    android:text="@string/nome_da_biblioteca"
                    android:textAllCaps="false"
                    android:textColor="#404040"
                    android:textSize="30sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    >

                    <ImageView
                        android:id="@+id/star_rate1"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_star_rate_grey"
                        />

                    <ImageView
                        android:id="@+id/star_rate2"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_star_rate_grey"
                        />

                    <ImageView
                        android:id="@+id/star_rate3"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_star_rate_grey"
                        />

                    <ImageView
                        android:id="@+id/star_rate4"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_star_rate_grey"
                        />

                    <ImageView
                        android:id="@+id/star_rate5"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_star_rate_grey"
                        />


                </LinearLayout>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:hint="@string/hint_comentario_avaliacao"
                    android:fontFamily="@font/exo2_regular"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    >


                    <Button
                        android:id="@+id/btn_cancelar"
                        android:layout_width="135dp"
                        android:layout_height="40dp"
                        android:text="@string/btn_cancelar"
                        android:fontFamily="@font/exo2_bold"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/custom_button_back"
                        />

                    <Button
                        android:id="@+id/btn_enviar_avaliacao"
                        android:layout_width="135dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:text="@string/btn_avaliar"
                        android:fontFamily="@font/exo2_bold"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/custom_button_cadastrar"
                        />






                </LinearLayout>







            </LinearLayout>

        </LinearLayout>









    </RelativeLayout>

</FrameLayout>